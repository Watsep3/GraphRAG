# ============================================================================
# GRAPHRAG PROJECT - Environment Variables
# ============================================================================
# 
# INSTRUCTIONS:
# 1. Copy this file to .env
# 2. Fill in your actual values
# 3. Never commit .env to git!
#
# ============================================================================

# Neo4j Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password_here

# Elasticsearch Configuration (Optional)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=your_password_here

# API Keys (Optional - for LLM integration)
OPENAI_API_KEY=sk-your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
HUGGINGFACE_TOKEN=hf_your_token_here

# Paths
DATA_DIR=C:/Projects/GraphRAG/data
MODEL_DIR=C:/Projects/GraphRAG/models
CHECKPOINT_DIR=C:/Projects/GraphRAG/checkpoints
LOG_DIR=C:/Projects/GraphRAG/logs

# Model Configuration
TEXT_MODEL_NAME=all-MiniLM-L6-v2
GRAPH_MODEL_PATH=models/graph/graph_encoder.pt
CROSS_MODAL_MODEL_PATH=checkpoints/best_cross_modal.pt

# Training Configuration
BATCH_SIZE=128
LEARNING_RATE=0.001
NUM_EPOCHS=50
DEVICE=cuda  # or 'cpu'

# RAG Configuration
K_TEXT_RESULTS=5
K_GRAPH_CONTEXT=10
MAX_HOPS=2

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
ENABLE_WANDB=false
WANDB_PROJECT=graphrag
WANDB_ENTITY=your_username

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Docker Configuration (if using Docker)
COMPOSE_PROJECT_NAME=graphrag

# Development
DEBUG=false
PROFILE=false